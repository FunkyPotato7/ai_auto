{% comment %}
  Section: "hero"
  Created by: Bard

  Snippets:
  - g-button
{% endcomment %}

{% style %}
  .hero {
    background-color: #a7d1ab;
    padding: 2rem 1rem;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 4rem;
    }
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (min-width: 768px) {
    .hero__content {
      align-items: flex-start;
    }
  }

  .hero__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-align: center;
  }

    @media (min-width: 768px) {
      .hero__title {
        font-size: 3.5rem;
        text-align: left;
      }
    }

  .hero__stars {
    display: flex;
    margin-bottom: 1rem;
  }

  .hero__subtext {
    margin-bottom: 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero__subtext {
      text-align: left;
    }
  }

  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .hero__buttons {
      flex-direction: row;
    }
  }

  .hero__badge {
    background-color: #EF4E36;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    margin-left: 0.5rem;
  }

  .hero__badges {
    display: flex;
    justify-content: center;
    gap: 1rem;  
  }

  .hero__badge-icon {
    border-radius: 50%;
    padding: 10px;
  }

  @media (min-width: 768px) {
   .hero__badges {
    justify-content: flex-start;
   }
  }
{% endstyle %}

<div class="hero" id="{{ section.id }}">
  <div class="hero__content">
    <div class="hero__stars">
      <span>★★★★★</span>
      <span>+10 000 vegans heureux</span>
    </div>
    <h2 class="hero__title">LE PLAISIR VÉGÉTAL,<br>ÇA COMMENCE ICI!</h2>
    <p class="hero__subtext">100% Produits végétaliens, sans matières animales</p>
    <div class="hero__buttons">
      {% render 'g-button', type: 'black-button', text: 'Découvrir les produits', link: '/collections/all' %}
      <div class="jc-flex jc-items-center">
        {% render 'g-button', type: 'grey-button', text: 'Créez votre pack', link: '/pages/create-your-pack' %}
        <span class="hero__badge">jusqu'à -20%</span>
      </div>
    </div>
    <div class="hero__badges">
      <div class="hero__badge-icon bg-green-200">100% VÉGÉTAL</div>
      <div class="hero__badge-icon bg-orange-200">100% GOURMAND</div>
      <div class="hero__badge-icon bg-pink-200">100% FUN</div>
    </div>
  </div>
</div>