{% comment %}
  Section: hero
{% endcomment %}

{% style %}
  .hero {
    background-color: #b2d235;
    padding: 40px 20px; /* Mobile padding */
  }

  @media (min-width: 768px) {
    .hero {
      padding: 80px 40px; /* Desktop padding */
    }
  }

  .hero__content {
    text-align: center; /* Center content */
  }

  .hero__stars {
    display: inline-flex; /* Align stars horizontally */
    margin-bottom: 10px; /* Add space below stars */
  }

  .hero__title {
    font-size: 2em; /* Adjust title size as needed */
    margin-bottom: 10px; /* Add space below title */
  }

  .hero__subtext {
    margin-bottom: 20px; /* Add space below subtext */
  }

  .hero__buttons {
    display: flex;
    flex-direction: column; /* Stack buttons vertically on mobile */
    gap: 10px;
    margin-bottom: 20px;
  }

  @media (min-width: 768px) {
    .hero__buttons {
      flex-direction: row; /* Arrange buttons horizontally on desktop */
      justify-content: center;
    }
  }

  .hero__badge {
    background-color: #d90429;
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.8em;
    display: inline-block; /* Prevent badge from breaking line */
  }

  .hero__badges {
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  .hero__badge-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    background-color: rgba(0, 0, 0, 0.1); /* Example background color */
  }

  /* Add hover effects for buttons */
  .hero__button:hover {
    /* Example hover effect: darken background */
    filter: brightness(90%);
  }
{% endstyle %}

<div class="hero" id="{{ section.id }}">
  <div class="hero__content">
    <div class="hero__stars">
      {%- for i in (1..5) -%}
        <span>&#9733;</span>
      {%- endfor -%}
      <span> + 10 000 vegans heureux</span>
    </div>

    <h2 class="hero__title">LE PLAISIR VÉGÉTAL, ÇA COMMENCE ICI!</h2>
    <p class="hero__subtext">100% Produits végétaliens, sans matières animales</p>

    <div class="hero__buttons">
      <a href="/collections/all" class="hero__button">Découvrir les produits</a>
      <a href="/pages/create-your-pack" class="hero__button">Créez votre pack <span class="hero__badge">jusqu'à -20%</span></a>
    </div>

    <div class="hero__badges">
      <div class="hero__badge-icon">100% VÉGÉTAL</div>
      <div class="hero__badge-icon">100% GOURMAND</div>
      <div class="hero__badge-icon">100% FUN</div>
    </div>
  </div>
</div>