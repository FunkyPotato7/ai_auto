{% comment %}
  Section: "hero"
  Created by: Bard

  Snippets:
  - g-button
{% endcomment %}

{% style %}
  .hero {
    background-color: #a7d1ab; /* Green background color */
  }

  .hero__content {
    padding: 2rem; /* Padding on mobile */
  }

  @media (min-width: 768px) {
    .hero__content {
      padding: 4rem; /* Padding on desktop */
    }
  }
{% endstyle %}

<div class="hero">
  <div class="hero__content jc-flex jc-flex-col jc-items-center jc-text-center lg:jc-text-left">
    <div class="jc-flex jc-items-center">
      <span class="jc-text-lg">⭐⭐⭐⭐⭐</span>
      <span class="jc-ml-2">+10 000 vegans heureux</span>
    </div>
    <h1 class="jc-text-3xl jc-font-bold jc-mt-4 lg:jc-text-5xl">LE PLAISIR VÉGÉTAL,<br>ÇA COMMENCE ICI !</h1>
    <p class="jc-mt-4 jc-text-lg">100% Produits végétaliens, sans matières animales</p>
    <div class="jc-flex jc-flex-col jc-mt-8 lg:jc-flex-row lg:jc-gap-4">
      {% render 'g-button', type: 'black-button', text: 'Découvrir les produits', link: '/collections/all' %}
      <div class="jc-relative">
        {% render 'g-button', type: 'gray-button', text: 'Créez votre pack', link: '/pages/create-your-pack' %}
        <span class="jc-absolute jc-top-0 jc-right-0 jc-bg-red-500 jc-text-white jc-px-2 jc-py-1 jc-rounded-bl-md jc-rounded-tr-md">jusqu'à -20%</span>
      </div>
    </div>
    <div class="jc-flex jc-gap-4 jc-mt-8">
      <div class="jc-bg-green-200 jc-rounded-full jc-px-4 jc-py-2 jc-text-center">100% VÉGÉTAL</div>
      <div class="jc-bg-yellow-200 jc-rounded-full jc-px-4 jc-py-2 jc-text-center">100% GOURMAND</div>
      <div class="jc-bg-pink-200 jc-rounded-full jc-px-4 jc-py-2 jc-text-center">100% FUN</div>
    </div>
  </div>
</div>