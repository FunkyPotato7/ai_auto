{% comment %}
  Section: "hero"
  Created by: Bard

  Snippets:
  - g-button
{% endcomment %}

{% style %}
  .hero {
    background-color: #A7D1AB; /* Green background color */
  }

  .hero__content {
    padding: 2rem; /* Padding on mobile */
  }

  @media (min-width: 768px) {
    .hero__content {
      padding: 4rem; /* Padding on desktop */
    }
  }

  .hero__stars {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem; /* Space below the stars */
  }

  .hero__badge {
    background-color: #EF645B; /* Red badge background */
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem; /* Slightly smaller font size */
  }

  .hero__badges {
    display: flex;
    gap: 1rem; /* Space between badges */
    margin-top: 2rem;
    justify-content: center;
  }

  .hero__badge-icon {
    background-color: #FBE2D8; /* Light orange background */
    color: #EF645B; /* Red text color */
    border-radius: 50%;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;  
  }
{% endstyle %}

<div class="hero">
  <div class="hero__content jc-grid jc-grid-cols-1 lg:jc-grid-cols-2 jc-gap-4">
    <div>
      <div class="hero__stars">
        <span>★★★★★</span>
        <span>+10 000 vegans heureux</span>
      </div>
      <h1 class="jc-text-4xl lg:jc-text-6xl jc-font-bold">LE PLAISIR VÉGÉTAL, ÇA COMMENCE ICI !</h1>
      <p class="jc-mt-4">100% Produits végétaliens, sans matières animales</p>
      <div class="jc-flex jc-gap-4 jc-mt-8">
        {% render 'g-button', type: 'black-button', text: 'Découvrir les produits', link: '/collections/all' %}
        {% render 'g-button', type: 'gray-button', text: 'Créez votre pack', link: '/pages/create-your-pack' %}
        <span class="hero__badge">jusqu'à -20%</span>
      </div>
      <div class="hero__badges">
        <div class="hero__badge-icon">
          <span class="jc-text-2xl">100%<br>VÉGÉTAL</span>
        </div>
        <div class="hero__badge-icon">
          <span class="jc-text-2xl">100%<br>GOURMAND</span>
        </div>
        <div class="hero__badge-icon">
          <span class="jc-text-2xl">100%<br>FUN</span>
        </div>
      </div>
    </div>
    <div>
      <img src="{{ 'product-image.jpg' | asset_url }}" alt="Product Image" />
    </div>
  </div>
</div>