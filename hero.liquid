{% style %}
  .hero {
    background-color: #b2d235; /* Green background */
    padding: 2rem 1rem; /* Mobile padding */
  }

  @media screen and (min-width: 768px) {
    .hero {
      padding: 4rem 2rem; /* Desktop padding */
    }
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center; /* Center content horizontally */
  }

  .hero__stars {
    display: flex;
    margin-bottom: 1rem;
  }

  .hero__title {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 1rem;
  }

  .hero__subtext {
    text-align: center;
    margin-bottom: 2rem;
  }

  .hero__ctas {
    display: flex;
    flex-direction: column; /* Stack CTAs vertically on mobile */
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    .hero__ctas {
      flex-direction: row; /* Arrange CTAs horizontally on desktop */
    }
  }

  .hero__cta-button {
    padding: 1rem 2rem;
    border: none;
    background-color: #fca311; /* Orange button */
    color: white;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .hero__cta-button:hover {
    background-color: #e58f0e; /* Darker orange on hover */
  }

  .hero__badge {
    background-color: #d00000; /* Red badge */
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    font-size: 0.8rem;
  }

  .hero__badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .hero__badge-icon {
    background-color: #fca311; /* Orange badge */
    color: white; /* White text */
    border-radius: 50%; /* Make it round */
    padding: 1rem; /* Adjust padding as needed */
    display: flex; /* To center icon */
    align-items: center; /* To center icon */
    justify-content: center; /* To center icon */
}

{% endstyle %}

<div class="hero">
  <div class="hero__content">
    <div class="hero__stars">
      <span>★★★★★</span>
      <span>+10 000 vegans heureux</span>
    </div>
    <h2 class="hero__title">LE PLAISIR VÉGÉTAL, ÇA COMMENCE ICI!</h2>
    <p class="hero__subtext">100% Produits végétaliens, sans matières animales</p>
    <div class="hero__ctas">
      <a href="/collections/all" class="hero__cta-button">Découvrir les produits</a>
      <a href="/pages/create-your-pack" class="hero__cta-button">
        Créez votre pack
        <span class="hero__badge">jusqu'à -20%</span>
      </a>
    </div>
    <div class="hero__badges">
      <div class="hero__badge-icon">100% VÉGÉTAL</div>
      <div class="hero__badge-icon">100% GOURMAND</div>
      <div class="hero__badge-icon">100% FUN</div>
    </div>
  </div>
</div>