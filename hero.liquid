{% comment %}
  Section: hero
{% endcomment %}

{% style %}
  .hero {
    background-color: #a7d1ab; /* Similar green color */
    padding: 2rem 1rem; /* Padding for mobile */
  }

  @media (min-width: 768px) {
    .hero {
      padding: 4rem 2rem; /* Padding for desktop */
    }
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center; /* Center content */
    text-align: center;
  }

  .hero__title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .hero__subtitle {
    margin-bottom: 2rem;
  }

  .hero__buttons {
    display: flex;
    flex-direction: column; /* Stack buttons vertically on mobile */
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .hero__buttons {
      flex-direction: row; /* Align buttons horizontally on desktop */
    }
  }

  .hero__badge {
    background-color: #f04e23; /* Red color for badge */
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem; /* Rounded corners */
  }

  .hero__badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .hero__badge-icon {
    background-color: #fbdc5a; /* Yellow color for badges */
    color: #121212;
    border-radius: 50%;
    padding: 1rem;
  }
{% endstyle %}

<div class="hero">
  <div class="hero__content">
    <div class="stars">★★★★★ +10 000 vegans heureux</div>
    <h2 class="hero__title">LE PLAISIR VÉGÉTAL, ÇA COMMENCE ICI!</h2>
    <p class="hero__subtitle">100% Produits végétaliens, sans matières animales</p>
    <div class="hero__buttons">
      {% render 'g-button', type: 'black-button', text: 'Découvrir les produits', link: '/collections/all' %}
      {% render 'g-button', type: 'black-button', text: 'Créez votre pack', link: '/pages/create-your-pack', badge: 'jusqu\'à -20%' %}
    </div>
    <div class="hero__badges">
      <div class="hero__badge-icon">100% VÉGÉTAL</div>
      <div class="hero__badge-icon">100% GOURMAND</div>
      <div class="hero__badge-icon">100% FUN</div>
    </div>
  </div>
</div>